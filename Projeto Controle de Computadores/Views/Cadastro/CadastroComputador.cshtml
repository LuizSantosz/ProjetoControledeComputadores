@model Projeto_Controle_de_Computadores.Models.Computador

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cadastrar Computador</title>
</head>
<body>
    <h1>Cadastro de Computador</h1>

    @if (ViewBag.ErrorMessage != null)
    {
        <p style="color:red;">@ViewBag.ErrorMessage</p>
    }

    @if (Model != null)
    {
        <form method="post">
            <div>
                <label for="nome">Nome:</label>
                <input type="text" id="nome" name="Nome" value="@Model.Nome" required />
            </div>
            <div>
                <label for="ip">Endereço de IP:</label>
                <input type="text" id="ip" name="Ip" value="@Model.Ip" required />
            </div>
            <div>
                <label for="grupo">Escolher Grupo:</label>
                <select id="grupo" name="GrupoId" required>
                    @foreach (var grupo in ViewBag.Grupos)
                    {
                        <option value="@grupo.Id">@grupo.Nome</option>
                    }
                </select>
            </div>
            <button type="submit">Cadastrar Computador</button>
        </form>
    }
    else
    {
        <p>Não há grupos cadastrados. Por favor, cadastre um grupo primeiro.</p>
    }
</body>
</html>
