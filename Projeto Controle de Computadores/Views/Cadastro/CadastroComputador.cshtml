@model IEnumerable<Projeto_Controle_de_Computadores.Models.Grupo>

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cadastrar Computador</title>
</head>
<body>
    <h1>Cadastro de Computador</h1>

    @if (Model != null && Model.Any())
    {
        <form method="post">
            <label for="grupo">Escolher Grupo:</label>
            <select id="grupo" name="GrupoId">
                @foreach (var grupo in Model)
                {
                    <option value="@grupo.Id">@grupo.Nome</option>
                }
            </select>
            <button type="submit">Cadastrar Computador</button>
        </form>
    }
    else
    {
        <p>Não há grupos cadastrados. Por favor, cadastre um grupo primeiro.</p>
    }
</body>
</html>
