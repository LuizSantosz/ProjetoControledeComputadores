@model Projeto_Controle_de_Computadores.Models.Computador

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Editar Computador</title>
</head>
<body>
    <h1>Editar Computador</h1>
    <form method="post">
        <input type="hidden" name="Id" value="@Model.Id" />
        <div>
            <label for="nome">Nome:</label>
            <input type="text" id="nome" name="Nome" value="@Model.Nome" required />
        </div>
        <div>
            <label for="ip">Endereço de IP:</label>
            <input type="text" id="ip" name="Ip" value="@Model.Ip" required />
        </div>
        <div>
            <label for="grupo">Escolher Grupo:</label>
            <select id="grupo" name="GrupoId" required>
                @foreach (var grupo in ViewBag.Grupos)
                {
                    <option value="@grupo.Id" selected="@((grupo.Id == Model.GrupoId) ? "selected" : "")">@grupo.Nome</option>
                }
            </select>
        </div>
        <button type="submit">Salvar Alterações</button>
    </form>
</body>
</html>
