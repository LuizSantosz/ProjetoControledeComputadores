@using System.Linq
@model IEnumerable<Projeto_Controle_de_Computadores.Models.Grupo>

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Listar Grupos</title>
    <link rel="stylesheet" href="~/css/Projeto_Controle_de_Computadores.styles.css" />
</head>
<body>
    <h1>Listar Grupos</h1>
    <a href="@Url.Action("CadastroGrupo", "Cadastro")">Cadastrar Novo Grupo</a>

    @if (Model != null && Model.Any())
    {
        <table>
            <thead>
                <tr>
                    <th>Nome do Grupo</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var grupo in Model)
                {
                    <tr>
                        <td>@grupo.Nome</td>
                        <td>
                            <a href="@Url.Action("EditarGrupo", "Cadastro", new { id = grupo.Id })">Editar</a>
                            <form method="post" action="@Url.Action("ExcluirGrupo", "Cadastro")" style="display:inline;">
                                <input type="hidden" name="id" value="@grupo.Id" />
                                <button type="submit" onclick="return confirm('Tem certeza que deseja excluir este grupo?');">Excluir</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-warning">Não há grupos cadastrados.</div>
    }
</body>
</html>
